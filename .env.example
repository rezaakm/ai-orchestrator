# API Keys - Add your actual keys here
PERPLEXITY_API_KEY=your_perplexity_key_here
ANTHROPIC_API_KEY=your_anthropic_key_here
GROK_API_KEY=your_grok_key_here

# Google APIs (Maps, YouTube, Gemini, etc. - enable needed APIs in Google Cloud Console)
GOOGLE_API_KEY=your_google_key_here

# Server Configuration
PORT=4000
NODE_ENV=development

# Canva API (Morpheus Proposal integration)
CANVA_CLIENT_ID=your_canva_client_id_here
CANVA_CLIENT_SECRET=your_canva_client_secret_here
# After running OAuth once (visit http://127.0.0.1:4000/auth/canva/authorize), add the tokens below:
CANVA_ACCESS_TOKEN=
CANVA_REFRESH_TOKEN=

# Krea.AI (image/video generation)
KREA_API_KEY=your_krea_key_here

# Freepik (stock images, vectors, templates)
FREEPIK_API_KEY=your_freepik_key_here

# Gamma.app (presentations, documents, social)
GAMMA_API_KEY=your_gamma_key_here

# Optional: N8n webhook URLs for finance endpoints
N8N_WEBHOOK_URL=your_n8n_webhook_url_here
